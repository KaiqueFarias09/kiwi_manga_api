generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model NovelCoolManga {
  id        String    @id @map("_id")
  name      String
  url       String    @unique
  synopsis  String
  genres    String[]
  cover     String
  hasCover  Boolean   @default(true)
  chapters  Chapter[]
  status    String
  updatedAt String

  @@map("novelcool")
}

type Chapter {
  url        String
  name       String
  releasedAt String
  pages      String[]
}
