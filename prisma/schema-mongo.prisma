generator client {
  provider = "prisma-client-js"
  output   = "./prisma/mongo-client"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

model Manga {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  url       String    @unique
  synopsis  String
  genres    String[]
  cover     String
  hasCover  Boolean
  chapters  Chapter[]
  status    String
  updatedAt String
  source    String

  @@map("novelcool")
}

model Chapter {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  url        String
  name       String
  releasedAt String
  pages      String[]

  NovelCoolManga   Manga  @relation(fields: [novelCoolMangaId], references: [id])
  novelCoolMangaId String @db.ObjectId

  @@map("chapters")
}
